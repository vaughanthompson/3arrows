    -webkit-overflow-scrolling: touch
    background-image: url(/images/textures/kraft-dk/tile.jpg)
    background-color: black
.open
    opacity: 1 !important
div.containMNav
    padding: padXL padXL
div.containMNav > *
    text-align: center
div.containMNav nav
    display: flex
    flex-direction: column
    margin:  0 0 marL
div.containMNav nav a
    padding: padM*1.25 padM 
    line-height: 130%
    margin: 3px 0
    border-radius: 4px
    background-color: rgba(0,0,0,0.8)
div.containMNav h6
    font-size: 1em
    margin-top: marStd
    margin-bottom: marL
div.containMNav a.alert
    color: bad

div.containMNav div.minorLinks, 
div.containMNav div.social 
    margin: marM 0 marXL 0
div.containMNav div.minorLinks
    padding: 0 padL

div.containMNav div.minorLinks a
    margin: marXXS
    padding: padXS
    line-height: 1.4em
    white-space: nowrap
    display: inline-block

