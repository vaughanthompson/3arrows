// footer
footer.siteWide section
    padding: padL
footer.siteWide section > a
    display: inline-block
    margin-bottom: 0.75em
    text-decoration: underline
@media phoneRule
    footer.siteWide
        border-top: none
    footer.siteWide section
        text-align: center
        border-top: 4px solid brand1
    footer.siteWide img.logo
        margin: 2em auto
        width: 30vw !important
    footer.siteWide p,
    footer.siteWide a
        max-width: 75%
        margin: 1em auto
        font-size: 1em !important
        line-height: 1.3em !important
@media ttrigger
    footer.siteWide section:last-child
        border-top: 4px solid brand1
    footer.siteWide img.logo
        margin-bottom: 2em
    footer.siteWide p,
    footer.siteWide a
        max-width: 90%
@media dtrigger
    footer.siteWide section
        padding: 0 padStd
    footer.siteWide
        display: flex
        justify-content: flex-start
        align-items: flex-start
        column-gap: marL
    footer.siteWide > section
        flex-basis: 30%
    footer.siteWide section:last-child
        border-top: none
    footer.siteWide p,
    footer.siteWide a
        max-width: 100%



// desktop navigation
div#masthead
    background-color: halfDark
    display: block
    color: white
div#priNav,
div#priNav-v2
    background-color: blackAlp75 
    display: block
div#slideNav
    background-color: blackAlp75 
div#secNav
    background-color: blackAlp75    
div#priNav, div#priNav-v2, div#secNav, div#carouselIndicator
    display: flex
    justify-content: space-between
    align-items: center
div#priNav > *, div#priNav-v2 > *, div#secNav > *
    margin-top: marXXS
    margin-bottom: marXXS
div#priNav > nav, div#priNav-v2 > nav, div#carouselIndicator > div:first-child
    display: flex
    justify-content: flex-start
    flex-basis: 75%
div#priNav > nav > *,
div#priNav-v2 > nav > *, div#carouselIndicator > div:first-child > div
    flex-basis: 17%    
    margin-right: marXS
div#priNav > div,
div#priNav-v2 > div
    flex-basis: 10%
div#secNav > nav
    display: flex
    justify-content: flex-end
    align-items: flex-end
    flex-basis: 60%
div#secNav > nav > *
    margin-left: marStd
div#secNav > div
    display: flex
    flex-basis: 15%
div#secNav > div > nav
    display: flex
div#secNav > div a
    margin-right: marStd
div#slideNav 
    display: none    
div#slideNav > div
    padding-left: 14.5%
    display: flex
div#slideNav > div > nav
    display: flex
    flex-direction: column
    margin-right: marXL
div#slideNav > div > nav > *
    margin-bottom: marXS*.8
div#carouselIndicator div.dashes > div
    height: 4px
div#carouselIndicator div.dashes > div.active
    background-color: brand2
div#priNav-v2 > nav a:not(:first-child)
    border-bottom: 1px solid
    border-bottom-color: whiteAlp50
    padding-left: 3px
    padding-bottom: 7px
    color: whiteAlp75
    align-self: center

div#priNav-v2 > nav a:first-child,
div#carouselIndicator > div:first-child > div:first-child
    flex-basis:25%
@media smallDesktop
    div#priNav > nav,
    div#priNav-v2 > nav, div#carouselIndicator > div:first-child
        flex-basis: 100%
    div#priNav > nav > *,
    div#priNav-v2 > nav > *, div#carouselIndicator > div:first-child > div
        flex-basis: 20%    
        margin-right: marM
    div#priNav-v2 > div,
    div#priNav > div
        display: none
    div#slideNav > div
        padding-left: 20%





// mobile nav
.navHeight
    height: navSpacer

#navMobile
    position: fixed
    bottom: marL
    right: marL
    z-index: 6000
#navHeader
    position: fixed
    z-index: 7000
    background-color: brand1a
    width:100vw
    padding-left: 0
    padding-right: 0 
    display: flex
    align-items: center
    justify-content: space-between
#navHeader div#mblNavControl
    display: flex 
    padding-right: rBorderXXS
#navHeader div#mblNavControl > *
    margin-right: rBorderXS     
#navHeader div.status
    flex-basis: 100%
    margin-right: 3vw
#navHeader > *
    //{test}   
div.mblnav
    display: none;
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%
    z-index: 6001
    background-color: black
div.mblnavContainer
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    /* The main point: */
    overflow-y: auto
